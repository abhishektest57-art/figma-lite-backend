{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",                  // keep it simple
    "outDir": "./dist",               // output cleanly into /dist
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express"]
  },
  "include": ["server.ts", "controllers/**/*.ts", "models/**/*.ts", "routes/**/*.ts", "services/**/*.ts", "sockets/**/*.ts", "middlewares/**/*.ts"],
  "exclude": ["node_modules", "dist", "logs"]
}
